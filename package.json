    "scripts": {
        "build": "npm run db-schema-generate && nest build",
        "prisma-migrate": "npx prisma migrate deploy --schema ./src/database/main-db/schema.prisma",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "db-schema": "npm run db-schema-pull && npm run db-schema-generate",
        "db-schema-pull": "npx prisma db pull --schema src/database/main-db/schema.prisma",
        "prisma-to-camelCase": "npx prisma-case-format -f ./src/database/main-db/schema.prisma -p",
        "db-schema-generate": "npx prisma generate --schema ./src/database/main-db/schema.prisma && npm run prisma-to-camelCase",
        "format": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
        "lint-fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "fix": "npm run format && npm run lint-fix"
    },
    "dependencies": {
        "@nestjs/common": "^11.1.6",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.1.6",
        "@nestjs/jwt": "^11.0.1",
        "@nestjs/platform-express": "^11.1.6",
        "@nestjs/swagger": "^11.2.0",
        "@nestjs/terminus": "^11.0.0",
        "@prisma/adapter-pg": "^7.1.0",
        "@prisma/client": "^7.1.0",
        "bcrypt": "^6.0.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "dayjs": "^1.11.18",
        "dotenv": "^17.2.3",
        "helmet": "^8.1.0",
        "lodash": "^4.17.21",
        "morgan": "^1.10.1",
        "multer": "^2.0.2",
        "prisma": "^7.1.0",
        "prisma-case-format": "^2.2.1",
        "uuid": "^13.0.0",
        "xlsx": "^0.18.5"
    },
    "devDependencies": {
        "@japa/assert": "^4.1.1",
        "@japa/runner": "^4.4.0",
        "@japa/spec-reporter": "^1.3.3",
        "@nestjs/cli": "^11.0.10",
        "@nestjs/schematics": "^11.0.8",
        "@nestjs/testing": "^11.1.6",
        "@parcel/watcher": "^2.5.1",
        "@types/bcrypt": "^6.0.0",
        "@types/express": "^5.0.5",
        "@types/lodash": "^4.17.20",
        "@types/morgan": "^1.9.10",
        "@types/multer": "^2.0.0",
        "@types/node": "^24.7.0",
        "@types/supertest": "^6.0.3",
        "@typescript-eslint/eslint-plugin": "^5.59.11",
        "@typescript-eslint/parser": "^5.59.11",
        "eslint": "^8.57.1",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-typescript": "^17.1.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-prettier": "^5.5.4",
        "mock-fs": "^5.5.0",
        "prettier": "^3.6.2",
        "source-map-support": "^0.5.21",
        "supertest": "^7.1.4",
        "ts-loader": "^9.5.4",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.9.3"
    }
}
